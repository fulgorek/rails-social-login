<%= simple_form_for(:session, url: '/login') do |f| %>
  <div class="form-group">
    <div class="col-sm-8">
      <%= f.input :email, placeholder: 'Email', label: false %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-8">
      <%= f.button :submit, 'Login', class: 'btn-info'  %>
    </div>
  </div>
<% end %>