<div class="jumbotron ">
  <div class="container">
    <div class="col-md-12">
    <h4>Listing Users</h4>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
          <th>Email</th>
          <th colspan="3"></th>
          <th colspan="3"></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <th colspan="3"></th>
            <td><%= user.email %></td>
            <th colspan="3"></th>

            <td><%= link_to 'Show', user %></td>
            <th colspan="3"></th>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
