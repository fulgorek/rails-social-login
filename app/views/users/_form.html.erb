<div id="new_user">
  <%= simple_form_for(@user) do |f| %>
    <div class="form-group">
      <div class="col-sm-8">
        <%= f.input :name, placeholder: 'Name', error: 'Invalid Name', label: false %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-8">
        <%= f.input :email, placeholder: 'Email', label: false %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-8">
        <%= f.button :submit, 'Sign Up', class: 'btn-info' %>
      </div>
    </div>
  <% end %>
</div>
